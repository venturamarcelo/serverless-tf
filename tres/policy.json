{
    "Version":"2012-10-17",
    "Statement":[
       {
          "Sid":"AllowCreatingLogs",
          "Effect":"Allow",
          "Action":[
             "logs:CreateLogGroup",
             "logs:CreateLogStream",
             "logs:PutLogEvents",
             "logs:DescribeLogStreams"
          ],
          "Resource":[
             "arn:aws:logs:*:*:*"
          ]
       },
       {
          "Sid":"AllowSNSPublish",
          "Effect":"Allow",
          "Action":[
             "sns:Publish"
          ],
          "Resource":[
             "arn:aws:sns:*:*:*"
          ]
       },
       {
          "Sid":"AllowSQSPermissions",
          "Effect":"Allow",
          "Action":[
             "sqs:ChangeMessageVisibility",
             "sqs:DeleteMessage",
             "sqs:GetQueueAttributes",
             "sqs:ReceiveMessage"
          ],
          "Resource":[
             "arn:aws:sqs:*:*:*"
          ]
       }
    ]
 }